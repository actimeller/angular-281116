{
    "compilerOptions": {
        "module": "commonjs",
        "lib":["es5","dom","es2015.promise","es6"],
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "typeRoots": ["types", "node_modules/@types"]
    },
    "exclude": [
        "node_modules"
    ],
    "include":[
        "*.ts"
    ]

}
